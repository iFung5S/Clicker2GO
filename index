<script>

var text = document.getElementById("greetings").innerHTML;
document.getElementById("greetings").innerHTML = greetings() + text;

function greetings()
{
  var myDate = new Date(); 
  /* 5:00 am - 11:59 am */
  if ( myDate.getHours() >= 5 && myDate.getHours() < 12 )
  { 
    return "Good morning, ";
  } 
  /* 12:00 nn - 5:59 pm */
  else if ( myDate.getHours() >= 12 && myDate.getHours() < 19 ) 
  {
    return "Good afternoon, ";
  }
  /* 6:00 pm - 12:00 mn OR 12:00 mn - 5:00 am */
  else if ( ( myDate.getHours() >= 19 && myDate.getHours() <= 24 ) || ( myDate.getHours() >= 0 && myDate.getHours() < 5 ) )
  {
    return "Good evening, ";
  } 
  else  /* the hour is not between 0 and 24, so something is wrong */
  { 
    return "Welcome, ";
  }
} 
</script>

  </body>
